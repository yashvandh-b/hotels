<% if current_user && (current_user.admin || current_user.superadmin) %>
  <%= link_to 'New Hotel', new_hotel_path, class: "btn btn-dark mx-auto" %><br /><br />
<%end%>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Phone</th>
      <th>Email</th>
      <% if current_user && current_user.superadmin %>
        <th>User Id</th>
        <th></th>
      <%end%>
    </tr>
  </thead>

  <tbody>
      <% if current_user %>
        <% @hotels.each do |hotel| %>
            <tr>
              <td><%= link_to hotel.name, hotel %></td>
              <td><%= hotel.location %></td>
              <td><%= hotel.phone %></td>
              <td><%= hotel.email %></td>
              <% if current_user.superadmin %>
                <td><%= hotel.user_id %></td>
                <td><%= link_to 'Delete', hotel, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
              <%end%>
            </tr> 
        <%end%>
      <%else%>
          <% controller.redirect_to(home_index_path) %>
      <% end %>
    </tbody>
</table>